<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.Detail.Detail">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="YARDIM DETAYLARI"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/yardimdetayicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/yardimdetayyardimturu"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                tools:text="YARDIM TÜRÜ"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"
                ></TextView>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="NOTLAR:"
            android:paddingStart="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/miktardetay"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                tools:text="Miktar"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                ></TextView>
            <TextView
                android:id="@+id/tarihdetay"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"
                tools:text="Tarih"
                ></TextView>
            <TextView
                android:id="@+id/konumdetay"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"
                tools:text="Konum"
                ></TextView>
            <TextView
                android:id="@+id/detaystring"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Detaylar."
                >

            </TextView>

        </LinearLayout>


    </LinearLayout>

</layout>