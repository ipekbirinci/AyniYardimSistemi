<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="YARDIM TALEBİ OLUŞTUR"
            android:gravity="center"
            android:textColor="@color/black"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/mainicon"
            ></ImageView>
        <Spinner
            android:id="@+id/helpTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:entries="@array/help_types" />
        <Spinner
            android:id="@+id/miktarSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:entries="@array/miktar_types" />
        <Spinner
            android:id="@+id/bedenSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:entries="@array/beden_types" />
        <Spinner
            android:id="@+id/aciliyetSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:entries="@array/aciliyet_types" />
        <Button
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="YARDIM TALEP ET."></Button>


    </LinearLayout>
</layout>